@model EncyclopediaOfHadiths.Models.Collection

@{
    ViewData["Title"] = @Localizer["Edit"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="title-right-rtl">
<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Collection"]</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollectionId" />
            <div class="form-group">
                <label asp-for="CollectionTitle" class="control-label"></label>
                <input asp-for="CollectionTitle" class="form-control" />
                <span asp-validation-for="CollectionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollectionAuthor" class="control-label"></label>
                <input asp-for="CollectionAuthor" class="form-control" />
                <span asp-validation-for="CollectionAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="title-right-rtl">
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
