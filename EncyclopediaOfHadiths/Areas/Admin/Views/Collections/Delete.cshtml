@model EncyclopediaOfHadiths.Models.Collection

@{
    ViewData["Title"] = @Localizer["Delete"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="title-right-rtl">
<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Collection"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CollectionTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CollectionAuthor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CollectionId" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
</div>
