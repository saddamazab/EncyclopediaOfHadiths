@model PaginatedList<EncyclopediaOfHadiths.Models.Narrator>

@{
    ViewData["Title"] =@Localizer["Narrators"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="title-right-rtl">
<h1>@Localizer["Narrators"]</h1>
</div>



                    <div class="card">
                    <div class="card-header card-header-primary card-header-icon ">
                        <div class="float-to-side">
                      <div class="card-icon">
                        <i class="material-icons">assignment</i>
                      </div>
                      </div>
                      <div class="float-to-side title-right-rtl">
                      <h2 class="card-title">@Localizer["Narrators table"]</h2>
                        <p>
                            <a asp-action="Create">@Localizer["Create new narrator"]</a>
                        </p>
                    </div>
                    </div>
                    <div class="card-body">
                      <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                      </div>


                      <form asp-action="Index" method="get" class=" title-right-rtl justify-start">
                        <div class="">
                                @Localizer["Find:"] <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                                <input type="submit" value="@Localizer["Search"]" class="btn btn-primary btn-round" /> &nbsp;| 
                        </div>
                        <a asp-action="Index">&nbsp; @Localizer["Back to Full List"]</a>
                        
                    </form>



<div class="material-datatables">
    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
            @foreach (var itm in Model){
        <thead style="border-top:1px solid #ce42f5;border-bottom:3px solid #ce42f5;color:black;">
        <tr style="text-align:right;">
            <th style="font-weight:bold;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NarratorSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                @Html.DisplayNameFor(modelItem => itm.NarratorName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => itm.NarratorWasBorned)
            </th>
            <th style="font-weight:bold;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NarratorDiedSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                @Html.DisplayNameFor(model => itm.NarratorDied)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => itm.NarratorInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => itm.NarratorNote)
            </th>
            <th></th>
            </tr>
                    </thead>
                    break;
                }
                <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="addReadMore showlesscontent">
                @Html.DisplayFor(modelItem => item.NarratorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NarratorWasBorned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NarratorDied)
            </td>
            <td class="addReadMore showlesscontent">
                @Html.DisplayFor(modelItem => item.NarratorInfo)
            </td>
            <td class="addReadMore showlesscontent">
                @Html.DisplayFor(modelItem => item.NarratorNote)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NarratorId">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.NarratorId">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.NarratorId">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>



                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }

                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-primary btn-round btn-sm @prevDisabled">
                   <span class="btn-label btn-label-right">
                      <i class="material-icons">keyboard_arrow_right</i>
                    </span>
                    @Localizer["Previous"]
                </a>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-primary btn-round btn-sm @nextDisabled">
                    @Localizer["Next"]
                    <span class="btn-label">
                      <i class="material-icons">keyboard_arrow_left</i>
                    </span>
                </a>
                </div>
                <!-- end content-->
              </div>
              <!--  end card  -->
            </div>