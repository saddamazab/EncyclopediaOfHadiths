@model EncyclopediaOfHadiths.Models.Hadith

@{
    ViewData["Title"] = @Localizer["Edit"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="title-right-rtl">
<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Hadith"]</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HadithId" />
            <div class="form-group">
                <label asp-for="CollectionId" class="control-label"></label>
                <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.CollectionId"></select>
                <span asp-validation-for="CollectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HadithNo" class="control-label"></label>
                <input asp-for="HadithNo" class="form-control" />
                <span asp-validation-for="HadithNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HadithText" class="control-label"></label>
                <input asp-for="HadithText" class="form-control" />
                <span asp-validation-for="HadithText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VocabsExplain" class="control-label"></label>
                <input asp-for="VocabsExplain" class="form-control" />
                <span asp-validation-for="VocabsExplain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewTermId" class="control-label"></label>
                <input asp-for="ReviewTermId" class="form-control" />
                <span asp-validation-for="ReviewTermId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HadithTypeId" class="control-label"></label>
                <select asp-for="HadithTypeId" class="form-control" asp-items="ViewBag.HadithTypeId"></select>
                <span asp-validation-for="HadithTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NarratorsChainId" class="control-label"></label>
                <input asp-for="NarratorsChainId" class="form-control" />
                <span asp-validation-for="NarratorsChainId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="title-right-rtl">
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
