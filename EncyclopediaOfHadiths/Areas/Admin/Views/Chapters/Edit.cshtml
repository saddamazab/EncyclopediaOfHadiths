@model EncyclopediaOfHadiths.Models.Chapter

@{
    ViewData["Title"] =@Localizer["Edit"];
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="title-right-rtl">
<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Chapter"]</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChapterId" />
            <div class="form-group">
                <label asp-for="ChapterTitle" class="control-label"></label>
                <input asp-for="ChapterTitle" class="form-control" />
                <span asp-validation-for="ChapterTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChapterVocabsExplain" class="control-label"></label>
                <input asp-for="ChapterVocabsExplain" class="form-control" />
                <span asp-validation-for="ChapterVocabsExplain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChapterExplainText" class="control-label"></label>
                <input asp-for="ChapterExplainText" class="form-control" />
                <span asp-validation-for="ChapterExplainText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartId" class="control-label"></label>
                <select asp-for="PartId" class="form-control" asp-items="ViewBag.PartId"></select>
                <span asp-validation-for="PartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div class="title-right-rtl">
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
