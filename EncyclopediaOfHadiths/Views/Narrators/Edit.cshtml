            </div>
            <div class="form-group">
                <label asp-for="NarratorDied" class="control-label"></label>
                <input asp-for="NarratorDied" class="form-control" />
                <span asp-validation-for="NarratorDied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NarratorInfo" class="control-label"></label>
                <input asp-for="NarratorInfo" class="form-control" />
                <span asp-validation-for="NarratorInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NarratorNote" class="control-label"></label>
                <input asp-for="NarratorNote" class="form-control" />
                <span asp-validation-for="NarratorNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
