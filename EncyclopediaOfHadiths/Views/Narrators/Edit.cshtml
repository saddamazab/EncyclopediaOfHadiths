@model EncyclopediaOfHadiths.Models.Narrator

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Narrator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NarratorId" />
            <div class="form-group">
                <label asp-for="NarratorName" class="control-label"></label>
                <input asp-for="NarratorName" class="form-control" />
